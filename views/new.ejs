<% include partials/header %>
<div class="ui text inverted container segment main">
    <div class="huge header ui">
        New Game
    </div>
    <form class="ui form inverted" action="/games" method="post">
      <div class="field">
        <label>Game Title</label>
        <input type="text" name="game[title]" placeholder="Title">
      </div>
      <div class="field">
        <label>Image</label>
        <input type="text" name="game[image]" placeholder="Image URL">
      </div>
      <div class="field">
        <label>Publisher</label>
        <input type="text" name="game[publisher]" placeholder="Publisher Name">
      </div>
      <div class="field">
        <label>Description</label>
        <textarea name="game[body]" required></textarea>
      </div>
      <div class="field">
          <label>Release Date</label>
          <input type="date" name="game[released]">
      </div>
      <button class="ui  button  big" type="submit">Submit</button>
    </form>
</div>

<% include partials/footer %>
